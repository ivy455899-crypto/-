        <div class="row">
            <input id="inp" placeholder="‰Ω†ÂñúÊ≠°ÁöÑÈ¶ôÊ∞£ÊòØÔºü" />
            <button id="add">Êñ∞Â¢ûÈ¶ôÊ∞£</button>
        </div>
        <ul id="list"></ul>
        <div id="msg" class="message"></div>
        <div class="small">ÈªûÊìäÊñáÂ≠óÂèØÁ∑®ËºØÔºõEnter ‰πüÂèØÊñ∞Â¢û„ÄÇ</div>
    </div>

    <audio id="bg-music" src="https://cdn.pixabay.com/download/audio/2022/03/15/audio_7895b33260.mp3?filename=relaxing-nature-ambient-14517.mp3" loop preload="auto"></audio>
    <audio id="chime" src="https://cdn.pixabay.com/download/audio/2022/03/15/audio_3dc6238a0a.mp3?filename=magic-wood-ambient-14433.mp3" preload="auto"></audio>
    <button id="music-control">Êí≠ÊîæÈü≥Ê®Ç üéµ</button>

    <script>
        (() => {
            const root = document.querySelector('#scentBox');
            const $ = (q) => root.querySelector(q);
            const KEY = 'scent_list';
            const inp = $('#inp');
            const add = $('#add');
            const list = $('#list');
            const msg = $('#msg');
            const chime = document.getElementById('chime');
            const bgMusic = document.getElementById('bg-music');
            const musicControl = document.getElementById('music-control');
            const leavesContainer = document.getElementById('leaves-container');

            let items = [];
            try { items = JSON.parse(localStorage.getItem(KEY) || '[]'); } catch { items = []; }

            function save() {
                localStorage.setItem(KEY, JSON.stringify(items));
            }

            function sparkle(el) {
                const spark = document.createElement('div');
                spark.className = 'sparkle';
                el.appendChild(spark);
                setTimeout(() => spark.remove(), 1000);
            }

            function render() {
                list.innerHTML = items.map((t, i) => `
                    <li data-i="${i}">
                        <span contenteditable style="flex:1">${t.text}</span>
                        <button class="del">Âà™</button>
                    </li>
                `).join('');
            }

            function showMessage(text) {
                msg.textContent = `üíê È¶ôÊ∞£Âä†ÂÖ•ÊàêÂäüÔºö${text}`;
                msg.style.opacity = 1;
                setTimeout(() => { msg.textContent = ''; }, 2500);
            }

            add.addEventListener('click', () => {
                const v = inp.value.trim();
                if (!v) return;
                items.push({ text: v });
                inp.value = '';
                save();
                render();

                showMessage(v);
                chime.play();
                sparkle(list.lastElementChild);
            });

            inp.addEventListener('keydown', e => {
                if (e.key === 'Enter') add.click();
            });

            list.addEventListener('click', e => {
                const li = e.target.closest('li');
                if (!li) return;
                const i = +li.dataset.i;
                if (e.target.classList.contains('del')) {
                    items.splice(i, 1);
                    save(); render();
                }
            });

            list.addEventListener('input', e => {
                const li = e.target.closest('li');
                if (!li || e.target.tagName !== 'SPAN') return;
                items[+li.dataset.i].text = e.target.textContent.trim();
                save();
            });

            render();

            let playing = false;
            musicControl.addEventListener('click', () => {
                if (playing) {
                    bgMusic.pause();
                    musicControl.textContent = 'Êí≠ÊîæÈü≥Ê®Ç üéµ';
                } else {
                    bgMusic.play();
                    musicControl.textContent = 'Êö´ÂÅúÈü≥Ê®Ç ‚è∏Ô∏è';
                }
                playing = !playing;
            });

            function createLeaf() {
                const leaf = document.createElement('div');
                leaf.className = 'leaf';
                leaf.style.left = Math.random() * window.innerWidth + 'px';
                const fallDuration = 8000 + Math.random() * 4000;
                const swayDuration = 2000 + Math.random() * 2000;
                leaf.style.animationDuration = `${fallDuration}ms, ${swayDuration}ms`;
                leavesContainer.appendChild(leaf);
                setTimeout(() => {
                    leaf.remove();
                }, fallDuration);
            }

            setInterval(createLeaf, 500);
        })();
    </script>
